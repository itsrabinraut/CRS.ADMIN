                        <tbody>
                            @{
                                foreach (var item in Model.PlanManagementModel)
                                {
                                    <tr class="bg-white border-b ">
                                        <td class="p-[12px]">
                                            @item.SNO
                                        </td>
                                        <td class="p-[12px]">
                                            @item.PlanName
                                        </td>
                                        <td class="p-[12px]">
                                            @if (!string.IsNullOrEmpty(item.PlanType) && item.PlanType.ToUpper().Trim() == "BASIC")
                                            {
                                                <div class="pending">
                                                    @item.PlanType
                                                </div>
                                            }
                                            else if (!string.IsNullOrEmpty(item.PlanType) && item.PlanType.ToUpper().Trim() == "PREMIUM")
                                            {
                                                <div class="approved">
                                                    @item.PlanType
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    @item.PlanType
                                                </div>
                                            }
                                        </td>
                                        @*<td class="p-[12px]">
                                                @if (!string.IsNullOrEmpty(item.PlanStatus) && item.PlanStatus.ToUpper() == "A")
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else if (!string.IsNullOrEmpty(item.PlanStatus) && item.PlanStatus.ToUpper() == "B")
                                                {
                                                    <span class="badge badge-danger">Blocked</span>
                                                }
                                            </td>*@
                                        <td class="p-[12px]">
                                            @item.PlanTime
                                        </td>
                                        <td class="p-[12px]">
                                            @if (!string.IsNullOrEmpty(item.PlanImage))
                                            {
                                                <img class="table-image h-[36px] w-[88px]" src="@item.PlanImage">
                                            }
                                            else
                                            {
                                                <img class="table-image h-[36px] w-[88px]" src="~/Content/assets_new/images/demo-image.jpeg">
                                            }
                                        </td>
                                        <td class="p-[12px]">
                                            @if (!string.IsNullOrEmpty(item.PlanImage2))
                                            {
                                                <img class="table-image h-[36px] w-[88px]" src="@item.PlanImage2">
                                            }
                                            else
                                            {
                                                <img class="table-image h-[36px] w-[88px]" src="~/Content/assets_new/images/demo-image.jpeg">
                                            }
                                        </td>
                                        <td class="p-[12px]">
                                            <div class="">
