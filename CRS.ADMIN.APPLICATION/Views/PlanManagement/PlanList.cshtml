                        </div>
                        <div class="flex gap-[12px]" id="pagination-id">
                        </div>
                        <div class="btn btn-secondary-box-shadow" id="next-btn">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Next
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

