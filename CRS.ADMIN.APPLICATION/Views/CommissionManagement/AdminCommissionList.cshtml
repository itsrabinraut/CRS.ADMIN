@model List<CRS.ADMIN.APPLICATION.Models.CommissionManagement.AdminCommissionModel>
@{
    ViewBag.Title = "SubCategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="px-8 py-4 flex flex-col gap-8">
    <div class="grid gap-8">
        <div class="flex justify-between items-center">
            <div>
                <div class="heading-title">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Manage_Commissions_Type
                </div>
                <div class="span-title-light-gray">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Informations_regarding_commissions_type
                </div>
            </div>
        </div>
        <div class="">
            <div class="bg-white">
                <div id="tab1" class="tab-content-plane ">
                    <div class="flex justify-between pt-[24px] pb-[24px]">
                    </div>
                    <div class="table-tab">
                        <div class="px-[16px] py-[12px] flex justify-between entry-export-container">
                            <div class="flex items-center select-entries">
                            </div>
                            <div class="export-button h-[40px]">
                                <img src="~/Content/assets_new/images/club/download-solid.svg"> @CRS.ADMIN.APPLICATION.Resources.Resource.Export
                            </div>
                        </div>
                        <div class="relative overflow-x-auto">
                            <table class="w-full  text-left club-table">
                                <thead class="club-table-thead">
                                    <tr>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex">
                                                S.N
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.CategoryType
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Descriptions
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex justify-center">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sno = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr class="bg-white border-b ">
                                                <td class="p-[12px]">
                                                    @sno
                                                </td>
                                                <td class="p-[12px]">
                                                    <div class="w-max">
                                                        @item.AdminCommissionName
                                                    </div>
                                                </td>
                                                <td class="p-[12px]">
                                                    <div class="w-max">
                                                        @item.AdminCommissionDescription
                                                    </div>
                                                </td>
                                                <td class="p-[12px]">
                                                    <div class="flex gap-[7px] justify-center text-[16px] ">
                                                        <div class="cursor-pointer"
                                                             onclick="viewCategoryList('@ViewBag.CategoryId','@ViewBag.CategoryName','@item.AdminCommissionTypeId')">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25"
                                                                 fill="none">
                                                                <g clip-path="url(#clip0_4164_81696)">
