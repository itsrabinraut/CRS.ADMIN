                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                    </button>
                </div>
                <div>
                    <div class="pt-[20px] text-base  text-secondary-100">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.RecommendationAcceptWarnMsg
                    </div>
                    <div class="flex gap-2 justify-end mt-[45px]">
                        <input id="ConfirmationAgentId" value="" hidden />
                        <input id="ConfirmationUserId" value="" hidden />
                        <input id="ConfirmationTxnId" value="" hidden />
                        <div class="input-field-common">
                            <label for="RejectAdminRemark" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Remarks
                                <br>
                                <textarea id="RejectAdminRemark" name="RejectAdminRemark" rows="4" cols="50">
