@model CRS.ADMIN.APPLICATION.Models.PointsManagement.PointRequestCommonModel
<form action="/PointsManagement/PointsTransferList" method="get">
    <div class="flex justify-between pb-[24px]">
        <div class="relative input-search-wrapper">
            <div class="absolute inset-y-0 left-0 flex items-center pl-[16px] pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                    <path d="M17.5 18L13.875 14.375M15.8333 9.66667C15.8333 13.3486 12.8486 16.3333 9.16667 16.3333C5.48477 16.3333 2.5 13.3486 2.5 9.66667C2.5 5.98477 5.48477 3 9.16667 3C12.8486 3 15.8333 5.98477 15.8333 9.66667Z"
                          stroke="#667085" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>
            <input type="search"
                   id="default-search"
                   class="input-search block w-full "
                   placeholder="@CRS.ADMIN.APPLICATION.Resources.Resource.Search"
                   value="@Model.SearchFilter"
                   name="SearchFilter4">
        </div>

        <div class="flex gap-6">
            <div class="flex gap-6">
                <div class="btn btn-primary gap-[8px] h-[40px]" data-drawer-target="add-new-points-request"
                     data-drawer-show="add-new-points-request" data-drawer-placement="right" data-drawer-backdrop="false"
                     aria-controls="drawer-disabled-backdrop" id="add-new-points-id">
                    <img src="~/Content/assets_new/images/plus-circle-solid.svg" />
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Self_Request
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-3 gap-x-12 table-tab filteroutlinepadding">
        <div class="input-field-common filteroutlinepadding">
            <label class="block mb-[12px] text-sm font-medium text-secondary-text-2 ">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Location
            </label>
            <select id="large" name="LocationId4" class=" default_select select-common block w-full "
                    style="width: 100%;">
                @foreach (var item in ViewBag.LocationIdList as IEnumerable<SelectListItem>)
                {
                    var selectedId = Model.LocationId as string;
                    if (item.Value == selectedId)
                    {
                        <option value="@item.Value" selected>
                            @item.Text
                        </option>
                    }
                    else
                    {
                        <option value="@item.Value">
                            @item.Text
                        </option>
                    }
                }
            </select>
            <span class="error">
                @Html.ValidationMessageFor(m => m.LocationId)
            </span>
        </div>

        <div class="input-field-common mb-[20px]">
            <div class="input-field-common filteroutlinepadding">
                <label for="date" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.ClubName
                </label>
                @Html.TextBox("ClubName4", Model.ClubName, new
           {
               @class = "w-full",
               @placeholder = @CRS.ADMIN.APPLICATION.Resources.Resource.ClubName,
               @autocomplete = "off",
               @type = "text"
           })

                <span class="error">
                    @Html.ValidationMessageFor(m => m.ClubName)
                </span>
            </div>
        </div>

        <div class="input-field-common filteroutlinepadding">
            <label class="block mb-[12px] text-sm font-medium text-secondary-text-2 ">
                @CRS.ADMIN.APPLICATION.Resources.Resource.PaymentMethod
            </label>
            <select id="large" name="PaymentMethodId4" class=" default_select select-common block w-full "
                    style="width: 100%;">
                @foreach (var item in ViewBag.CLUBTOADMINPaymentMethodListIdList as IEnumerable<SelectListItem>)
                {
                    var selectedId = Model.PaymentMethodId as string;
                    if (item.Value == selectedId)
                    {
                        <option value="@item.Value" selected>
                            @item.Text
                        </option>
                    }
                    else
                    {
                        <option value="@item.Value">
                            @item.Text
                        </option>
                    }
                }
            </select>
            <span class="error">
                @Html.ValidationMessageFor(m => m.PaymentMethodId)
            </span>
        </div>

        <div class="input-field-common mb-[20px]" id="tagInput1">
            <div class="input-field-common filteroutlinepadding">
                <label for="date" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.From_Date
                </label>
                @Html.TextBox("FromDate4", Model.FromDate, new
               {
                   @class = "w-full",
                   @placeholder = "YYYY/MM/DD",
                   @autocomplete = "off",
                   @type = "text",
                   @readonly = "readonly",
                   @id = "FromDate4"
               })
                <span class="error">
                    @Html.ValidationMessageFor(m => m.FromDate)
                </span>
            </div>
        </div>
        <div class="input-field-common mb-[20px]" id="tagInput2">
            <div class="input-field-common filteroutlinepadding">
                <label for="date" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.To_Date
                </label>
                @Html.TextBox("ToDate4", Model.ToDate, new
                  {
                      @class = "w-full",
                      @placeholder = "YYYY/MM/DD",
                      @autocomplete = "off",
                      @type = "text",
                      @readonly = "readonly",
                      @id = "ToDate4"
                  })

                <span class="error">
                    @Html.ValidationMessageFor(m => m.ToDate)
                </span>
            </div>
        </div>
        <br />
        <div>
            <div class="py-4 flex justify-end">
                <div class="flex gap-6">
                    <button class="btn btn-secondary rounded-[4px]" type="button" data-drawer-hide="add-new-points-request"
                            aria-controls="add-new-points-request" onclick="CancelFunction();">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Cancel
                    </button>
                    <button class="btn btn-primary-default rounded-[4px]" type="submit"> @CRS.ADMIN.APPLICATION.Resources.Resource.Apply</button>
                </div>

            </div>
        </div>
    </div>
</form>

<div class="px-[12px] py-[16px] flex justify-between entry-export-container">
    <div class="flex items-center select-entries" id="ShowEntries-Id">
    </div>
</div>
<div class="relative overflow-x-auto">
    <table class="w-full text-left club-table" id="table-id">
        <thead class="club-table-thead">
            <tr>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        S.N
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.RequestId
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>


                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Requested_Date
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>

                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.ClubName
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>

                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.PaymentMethod
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>

                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.AmountTransferred
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Status
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Remarks
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.UpdatedBy
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.UpdatedDate
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
                <th scope="col" class="p-[12px]">
                    <div class="flex w-max">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                        <div class="relative pl-[5px]">
                            <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                            <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                        </div>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.PointRequestsListModel.Count > 0)
                {
                    int SN = 1;
                    foreach (var item in Model.PointRequestsListModel)
                    {
                        <tr class="bg-white border-b ">
                            <td class="p-[12px]">
                                @SN
                            </td>
                            <td class="p-[12px]">
                                @item.RequestId
                            </td>
                            <td class="p-[12px]">
                                @item.RequestedDate
                            </td>
                            <td class="p-[12px]">
                                @item.ClubName
                            </td>
                            <td class="p-[12px]">
                                @item.PaymentMethod
                            </td>
                            <td class="p-[12px]">
                                @item.AmountTransferred
                            </td>
                            <td class="p-[12px]">
                                @item.Status
                            </td>
                            <td class="p-[12px]">
                                @item.Remarks
                            </td>
                            <td class="p-[12px]">
                                @item.UpdatedBy
                            </td>
                            <td class="p-[12px]">
                                @item.UpdatedDate
                            </td>
                            <td class="p-[12px]">
                                <i class="las la-window-close text-[24px] text-[#CB3F3F] cursor-pointer " data-modal-target="popup-modal-reject" data-modal-toggle="popup-modal-reject" alt=""
                                   onclick="InitateRejectRequest('@item.AgentId', '@item.UserId', '@item.RequestId')" />
                                <img src="/Content/assets_new/images/check-square.svg"
                                     data-modal-target="popup-modal-accept"
                                     data-modal-toggle="popup-modal-accept" alt="" class="cursor-pointer" onclick="InitateApproveRequest('@item.AgentId', '@item.UserId', '@item.RequestId')" />
                            </td>
                        </tr>
                        SN++;
                    }
                }

            }
        </tbody>
    </table>

</div>
<div class="pagination-club">
    <div class="show-entry" id="Entries-Id">
    </div>
    <div class="flex gap-[12px]">
        <div class="btn btn-secondary-box-shadow" id="prev-btn">
            @CRS.ADMIN.APPLICATION.Resources.Resource.Previous
        </div>
        <div class="flex gap-[12px]" id="pagination-id">
        </div>
        <div class="btn btn-secondary-box-shadow" id="next-btn">
            @CRS.ADMIN.APPLICATION.Resources.Resource.Next
        </div>
    </div>
</div>

<div id="popup-modal-accept" tabindex="-1"
     class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="p-6 text-start">
                <div class=" pb-[11px] border-b border-[rgba(44, 44, 44, 0.08)] text-base font-semibold text-secondary-100">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Confirmation
                    <button type="button"
                            class="absolute top-4 right-3 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                            data-modal-hide="popup-modal-accept">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                    </button>
                </div>
                <div>
                    <div class="pt-[20px] text-base text-secondary-100" id="AcceptRequestId">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.RecommendationAcceptWarnMsg
                    </div>
                    <div class="flex gap-2 justify-end mt-[45px]">
                        <input id="RejectAgentId" value="" hidden />
                        <input id="RejectUserId" value="" hidden />
                        <input id="RejectTxnId" value="" hidden />
                        <div class="input-field-common">
                            <label for="ConfirmationAdminRemark" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Remarks
                                <br>
                                <textarea id="ConfirmationAdminRemark" name="ConfirmationAdminRemark" rows="4" cols="50">
                                </textarea>
                            </label>
                        </div>
                        <div>
                            <label class="block mb-[12px] text-sm font-medium text-secondary-text-2 ">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Image
                            </label>
                            <div class="file-upload-common">
                                <label for="file_input_cover" class="custom-file-upload bg-[#CC527A] w-[123px] flex-none ">
                                    <span>  @CRS.ADMIN.APPLICATION.Resources.Resource.Choose_Images</span>
                                </label>
                                <input id="file_input_cover" class="file-input" name="ConfirmationImageURL" type="file" value="" style="display:none;">
                                <p id="file_name_logo"
                                   class="file-name w-max h-[23px] overflow-hidden pl-2 text-xs text-[#686868] leading-[25px]">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.No_File_Choosen
                                </p>
                            </div>
                            <div class="text-xs text-error mt-[8px]">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Note:
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Image_should_be_in_HEIF_format
                                @CRS.ADMIN.APPLICATION.Resources.Resource.and_Maximum_file_size_is_5_MB .
                            </div>
                        </div>
                        <div class="btn btn-secondary w-[110px]" data-modal-hide="popup-modal-accept">@CRS.ADMIN.APPLICATION.Resources.Resource.Cancel</div>
                        <div class="btn btn-primary w-[110px]" onclick="ApproveClubPointRequestFunction()">@CRS.ADMIN.APPLICATION.Resources.Resource.Confirm</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
