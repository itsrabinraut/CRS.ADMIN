<script>
    $(document).ready(function () {
        $('select').select2({
            minimumResultsForSearch: Infinity
        })
        var popUpRenderValue = '@ViewBag.PopUpRenderValue';
        if (popUpRenderValue != null && popUpRenderValue != "" && popUpRenderValue == "Manage") {
            var element = document.getElementById('add-new-host-staff');
            element.classList.remove('translate-x-full');
        }
    });
    //function AddStaff() {
    //    document.getElementById("ManageStaffForm").submit();
    //}
    function CancelFunction() {
        location.reload();
    }

    function editStaffDetail(id) {
        window.location.href = '/StaffManagement/ManageStaff?id=' + id;
    }
    function deleteStaff(id) {
        $.ajax({
            type: 'POST',
            async: true,
            url: "/StaffManagement/DeleteStaff?id=" + id,
            dataType: 'json',
            data: {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
            },
            success: function () {
                window.location.reload();
            },
            error: function (ex) {

            }
        });
    }
</script>