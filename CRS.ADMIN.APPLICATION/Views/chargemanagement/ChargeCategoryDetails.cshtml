@model CRS.ADMIN.APPLICATION.Models.ChargeManagement.ChargeCategoryDetailsModel
@{
    ViewBag.Title = "Charge Category Details List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _ManageCategoryDetails = Model.ManageChargeDetails as CRS.ADMIN.APPLICATION.Models.ChargeManagement.ManageChargeDetailsModel;
}
<div class="px-8 py-4">
    @Html.AntiForgeryToken()
    <!-- title  -->
    <div class="flex flex-col  gap-6">
        <div>
            <div class="heading-title">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Manage_Charge
            </div>
            <div class="span-title-light-gray">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Informations_regarding_charges_
            </div>
        </div>
        <!-- container  -->
        <div id="tab1" class="tab-content-plane">
            <div class="flex flex-col gap-8">
                <div id="tab1" class="tab-content">
                    <div class="flex justify-between pb-[24px]">


                        <div class="flex gap-6 justify-between items-center w-full">

                            <form action="/ChargeManagement/ChargeCategoryType" method="get">
                                @*<input type="hidden" name="agentTypeValue" value="@Model.agentTypeValue"*@
                                @*<div class="relative input-search-wrapper">
                                    <div class="absolute inset-y-0 left-0 flex items-center pl-[16px] pointer-events-none">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                                            <path d="M17.5 18L13.875 14.375M15.8333 9.66667C15.8333 13.3486 12.8486 16.3333 9.16667 16.3333C5.48477 16.3333 2.5 13.3486 2.5 9.66667C2.5 5.98477 5.48477 3 9.16667 3C12.8486 3 15.8333 5.98477 15.8333 9.66667Z"
                                                  stroke="#667085" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                    </div>
                                    <input type="search"
                                           id="default-search"
                                           class="input-search block w-full "
                                           placeholder="@CRS.ADMIN.APPLICATION.Resources.Resource.Search"
                                           value="@Model.SearchFilter"
                                           name="SearchFilter">
                                </div>*@
                            </form>

                            <div class="btn btn-primary gap-[8px] h-[40px]" data-drawer-target="add-new-charge-category-slab"
                                 data-drawer-show="add-new-charge-category-slab" data-drawer-placement="right" data-drawer-backdrop="false"
                                 aria-controls="drawer-disabled-backdrop" id="add-new-id">
                                <img src="~/Content/assets_new/images/plus-circle-solid.svg" />
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Add_New
                            </div>
                        </div>

                    </div>
                    <div>
                        <p>@CRS.ADMIN.APPLICATION.Resources.Resource.User_Type : @Model.categoryName</p>
                    </div>
                    <div class="table-tab">
                        <div class="px-[12px] py-[16px] flex justify-between entry-export-container">
                            <div class="flex items-center select-entries" id="ShowEntries-Id">
                            </div>
                        </div>
                        <div class="relative overflow-x-auto">
                            @*<p>clubowner</p>*@
                            <table class="w-full text-left club-table" id="table-id">
                                <thead class="club-table-thead">
                                    <tr>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                S.N
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>

                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.FromAmount
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>

                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.ToAmount
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Charge_Type
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Value
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Min_Value
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Max_Value
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Status
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>
                                        <th scope="col" class="p-[12px]">
                                            <div class="flex w-max">
                                                @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                                                <div class="relative pl-[5px]">
                                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                                </div>
                                            </div>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.ChargeCategoryDetailsList.Count > 0)
                                        {
                                            int SN = 1;
                                            foreach (var item in Model.ChargeCategoryDetailsList)
                                            {
                                                <tr class="bg-white border-b ">
                                                    <td class="p-[12px]">
                                                        @item.SNO
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.fromAmount
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.toAmount
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.chargeType
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.chargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.minChargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.maxChargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @if (!string.IsNullOrEmpty(item.status) && item.status.Trim().ToUpper() == "A")
                                                        {
                                                            <div class="approved">
                                                                Active
                                                            </div>
                                                        }
                                                        else if(!string.IsNullOrEmpty(item.status) && item.status.Trim().ToUpper() == "S")
                                                        {
                                                            <div class="blocked">
                                                                Suspended
                                                            </div>
                                                        }
                                                    </td>
                                                    <td class="p-[12px]">
                                                        <div class="flex gap-[7px]">

                                                            <i class="las la-edit text-[20px] cursor-pointer text-[#A6A6A6]" onclick="EditCategory('@item.categoryId','@item.categoryDetailId','@Model.categoryName');"></i>
                                                            <i class="las la-trash-alt text-[20px] cursor-pointer text-[#CB3F3F]" onclick="ManageStatus('@item.categoryId','@item.categoryDetailId','@Model.categoryName','D')"></i>
                                                            @if (!string.IsNullOrEmpty(@item.status) && item.status.Trim().ToUpper() == "A")
                                                            {
                                                                <i class="las la-ban text-[20px] cursor-pointer text-[#CB3F3F]" onclick="ManageStatus('@item.categoryId','@item.categoryDetailId','@Model.categoryName','S')"></i>

                                                            }
                                                            else if (!string.IsNullOrEmpty(@item.status) && item.status.Trim().ToUpper() == "S")
                                                            {
                                                                <i class="las la-ban text-[20px] cursor-pointer text-[#A6A6A6]" onclick="ManageStatus('@item.categoryId','@item.categoryDetailId','@Model.categoryName','A')"></i>
                                                            }


                                                        </div>
                                                    </td>
                                                </tr>
                                                SN++;
                                            }
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>
                        <div class="pagination-club">
                            <div class="show-entry" id="Entries-Id">
                            </div>
                            <div class="flex gap-[12px]">
                                <div class="btn btn-secondary-box-shadow" id="prev-btn">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Previous
                                </div>
                                <div class="flex gap-[12px]" id="pagination-id">
                                </div>
                                <div class="btn btn-secondary-box-shadow" id="next-btn">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Next
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_ManageChargeCategoryDetails", _ManageCategoryDetails)

@section scripts
{

    <script>
        $(document).ready(function () {
        var PopUpRenderValue = '@ViewBag.PopUpRenderValue';
         if (PopUpRenderValue != null && PopUpRenderValue != "" && PopUpRenderValue == "Manage") {
             var element = document.getElementById('add-new-charge-category-slab');
        element.classList.remove('translate-x-full');
        }
        });
        function addQueryParam2(url, paramName, paramValue, paramName2, paramValue2) {
            if (paramValue != null && paramValue != "") {
                url += url.includes('?') ? `&${paramName}=${paramValue}` : `?${paramName}=${paramValue}`;
            }
            if (paramValue2 != null && paramValue2 != "") {
                url += url.includes('?') ? `&${paramName2}=${paramValue2}` : `?${paramName2}=${paramValue2}`;
            }
            return url;
        }


        document.addEventListener('DOMContentLoaded', function () {
            debugger;
            const page_size = @ViewBag.PageSize;
            const total_data = @ViewBag.TotalData;
            const start_index_val = @ViewBag.StartIndex;
            let URL = "/ChargeManagement/ChargeCategoryDetails" ;
            let search_filter = $('#default-search').val();
            URL = addQueryParam2(URL, 'SearchFilter', search_filter, "agentTypeValue", "@Model.agentTypeValue");
            URL = addQueryParam(URL, 'categoryId', "@Model.categoryId");
            URL = addQueryParam(URL, 'categoryName', "@Model.categoryName");
            LoadPagination(page_size, total_data, start_index_val, URL);

        });
         function EditCategory(i, j,k) {
             window.location.href = '/ChargeManagement/ManageChargeCategoryDetails?agentTypeValue=' + "@Model.agentTypeValue" +'&categoryId=' + i + '&categoryDetailId=' + j + '&categoryName=' + k;
        }
        function ManageStatus(i, j,k,l) {
            window.location.href = '/ChargeManagement/ManageChargeDetailStatus?agentTypeValue=' + "@Model.agentTypeValue" + '&categoryId=' + i + '&categoryDetailId=' + j + '&categoryName=' + k + '&status=' + l;
        }

        function CancelFunction() {
            location.reload();
        }
    </script>
}