                        </div>
                        <div class="text-lg font-semibold">グループ内店舗数</div>
                    </div>
                    <div class="text-2xl font-semibold mb-[30px]">
                        @Model.GetGroupAnalytic.AssignedClub
                    </div>
                </div>
                <div>
                </div>
