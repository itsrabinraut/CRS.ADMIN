@section scripts{
    <script>
        function getActiveButtonValue() {
            const activeButton = document.querySelector('.tab-link.active');
            const overallRecommendationDiv = document.querySelector('.overall-recommendation');
            if (activeButton) {
                const activeButtonValue = activeButton.textContent;

                if (activeButtonValue === "Configure") {
                    overallRecommendationDiv.style.display = 'none';
                } else {
                    overallRecommendationDiv.style.display = 'block';
                }
            }
        }

        // Run the function when the page is loaded
        document.addEventListener('DOMContentLoaded', getActiveButtonValue);
    </script>
    <script>
        function GotoDisplayPageView(locationid) {
            window.location.href = "/RecommendationManagementV2/DisplayPageView?locationId=" + locationid;
        }
        function GotoMainPageRecommendationReqUpdate(clubid, locationid, displayid, recommendationHoldid) {
            window.location.href = "/RecommendationManagementV2/ManageMainPageRecommendationReqForUpdate?clubid=" + clubid + '&locationid=' + locationid + '&displayid=' + displayid + '&recommendationholdid=' + recommendationHoldid;
        }
        function rejectSearchAndHomePageReq() {
            let recommendationHoldId = $('#ConfirmationRecommendationHoldId').val(), clubid = $('#ConfirmationClubId').val(), displayid = $('#ConfirmationDisplayId').val(), locationid = $('#ConfirmationLocationId').val();
            $.ajax({
                type: 'POST',
                async: true,
                url: "/RecommendationManagementV2/RejectHomeAndSearchPageRecommendationRequest?recommendationHoldId=" + recommendationHoldId + "&displayid=" + displayid + "&clubid=" + clubid + '&locationid=' + locationid,
                dataType: 'json',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                },
                success: function (responseData) {
                    window.location.reload();
                },
                error: function (ex) {

                }
            });
        }
        function rejectReq(recommendationHoldId, clubid, displayid, locationid) {
            $('#ConfirmationRecommendationHoldId').val(recommendationHoldId);
            $('#ConfirmationClubId').val(clubid);
            $('#ConfirmationDisplayId').val(displayid);
            $('#ConfirmationLocationId').val(locationid);
        }
        function acceptReq(recommendationHoldId, clubid, displayid, locationid) {
            $('#ConfirmationRecommendationHoldId').val(recommendationHoldId);
            $('#ConfirmationClubId').val(clubid);
            $('#ConfirmationDisplayId').val(displayid);
            $('#ConfirmationLocationId').val(locationid);
        }
        function acceptSearchAndHomePageReq() {
            let recommendationHoldId = $('#ConfirmationRecommendationHoldId').val(), clubid = $('#ConfirmationClubId').val(), displayid = $('#ConfirmationDisplayId').val(), locationid = $('#ConfirmationLocationId').val();
            $.ajax({
                type: 'POST',
                async: true,
                url: "/RecommendationManagementV2/ApproveHomeAndSearchPageRecommendationReq?recommendationHoldId=" + recommendationHoldId + "&displayid=" + displayid + "&clubid=" + clubid + '&locationid=' + locationid,
                dataType: 'json',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                },
                success: function (responseData) {
                    window.location.reload();
                },
                error: function (ex) {

                }
            });
        }
    </script>
