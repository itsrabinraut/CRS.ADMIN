@model CRS.ADMIN.APPLICATION.Models.AffiliateManagement.ReferalCommonModel
<div class="flex justify-between mb-4">
    <form action="/AffiliateManagement/Index" method="get">
        @*@Html.HiddenFor(model => model.ListType)*@
        <input name="value" id="valueTypeid2" type="hidden" value="c" />
        <div class="relative input-search-wrapper">
            <div class="absolute inset-y-0 left-0 flex items-center pl-[16px] pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                    <path d="M17.5 18L13.875 14.375M15.8333 9.66667C15.8333 13.3486 12.8486 16.3333 9.16667 16.3333C5.48477 16.3333 2.5 13.3486 2.5 9.66667C2.5 5.98477 5.48477 3 9.16667 3C12.8486 3 15.8333 5.98477 15.8333 9.66667Z"
                          stroke="#667085" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round">
                    </path>
                </svg>
            </div>
            <input type="search" id="default-search" class="input-search block w-full " placeholder="@CRS.ADMIN.APPLICATION.Resources.Resource.Search" name="SearchFilter2"
                   value="@ViewBag.SearchFilter2">
        </div>
    </form>
</div>
<div class="table-tab">
    <div class="px-[12px] py-[16px] flex justify-between entry-export-container">
        <div class="flex items-center select-entries" id="ShowEntries-Id-2">
        </div>
        <div class="export-button  h-[40px]" onclick="exportExcel('table-id2', 'AffiliateCustomer')">
            <img src="~/Content/assets_new/images/club/download-solid.svg" /> @CRS.ADMIN.APPLICATION.Resources.Resource.Export
        </div>
    </div>
    <div class="relative overflow-x-auto">
        <table class="w-full  text-left club-table" id="table-id2">
            <thead class="club-table-thead">
                <tr>
                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            S.N
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>
                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Customer
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>
                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Converted_Date
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>
                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Associated_Affiliate
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>

                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Affiliate_Amount
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>
                    <th scope="col" class="p-[12px]">
                        <div class="flex">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                            <div class="relative pl-[5px]">
                                <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                            </div>
                        </div>
                    </th>


                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.GetReferalConvertedCustomerList)
                    {
                        <tr class="bg-white border-b ">
                            <td class="p-[12px]">
                                @item.SNO
                            </td>
                            <td class="p-[12px]">
                                <div class="round-image-text gap-[12px] items-center">
                                    @if (!string.IsNullOrEmpty(item.CustomerImage))
                                    {
                                        <img class="w-[32px] h-[32px] rounded-full" src="@item.CustomerImage" />
                                    }
                                    else
                                    {
                                        <img class="w-[32px] h-[32px] rounded-full" src="~/Content/assets_new/images/demo-image.jpeg" />
                                    }
                                    <div class="flex justify-between w-full">
                                        <div class="text-image grid flex-none ">
                                            <div class="text-sm font-semibold text-[#101828] "> @item.CustomerFullName</div>
                                            @if (!string.IsNullOrEmpty(item.CustomerUserName))
                                            {
                                                <div>
                                                    @item.CustomerUserName.ToUpper()
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    @*<div class="text-image">
                                            @item.CustomerUserName
                                        </div>*@
                                </div>
                            </td>
                            <td class="p-[12px]">
                                <div class="w-max ">
                                    @item.CustomerConvertedDate
                                </div>
                            </td>
                            <td class="p-[12px]">
                                <div class="round-image-text gap-[12px] items-center">
                                    @if (!string.IsNullOrEmpty(item.AffiliateImaeg))
                                    {
                                        <img class="w-[32px] h-[32px] rounded-full" src="@item.AffiliateImaeg" />
                                    }
                                    else
                                    {
                                        <img class="w-[32px] h-[32px] rounded-full" src="~/Content/assets_new/images/demo-image.jpeg" />
                                    }
                                    <div class="flex justify-between w-full">
                                        <div class="text-image grid flex-none ">
                                            <div class="text-sm font-semibold text-[#101828] "> @item.AffiliateFullName</div>
                                            @if (!string.IsNullOrEmpty(item.AffiliateId))
                                            {
                                                <div>
                                                    @item.AffiliateId
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    @*<div class="text-image">
                                            @item.AffiliateFullName
                                        </div>*@
                                </div>
                            </td>
                            <td class="p-[12px]">
                                ¥ @item.AffiliateAmount
                            </td>
                            <td class="p-[12px]">
                                @*<div class="flex gap-2 items-center">
                                        <i class="las la-eye text-[24px] text-[#A6A6A6]"></i>
                                    </div>*@
                            </td>
                            <td class="p-[12px]">
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="pagination-club">
        <div class="show-entry" id="Entries-Id-2">
        </div>
        <div class="flex gap-[12px]">
            <div class="btn btn-secondary-box-shadow" id="prev-btn-2">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Previous
            </div>
            <div class="flex gap-[12px]" id="pagination-id-2">
            </div>
            <div class="btn btn-secondary-box-shadow" id="next-btn-2">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Next
            </div>
        </div>
    </div>
</div>